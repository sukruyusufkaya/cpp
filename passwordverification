#include <iostream>
#include <string>
using namespace std;

int main(){
	
	string isim1 = "Sukru Yusuf";
	string isim2 = "Ahmet";
	string isim3 = "Mehmet";
	string isim4 = "Ayse";
	string parola_girisi;
	string parola1 = "010203";
	string parola2 = "020103";
	string parola3 = "030102";
	string parola4 = "030201";
	donus1:
	int giris_degeri;
	cout << "1 : Sukru Yusuf, 2 : Ahmet, 3 : Mehmet, 4 : Ayse" << endl;
	cout << "Lutfen giris yapacak kisiyi seciniz : ";
	cin >> giris_degeri;
	
	if (giris_degeri == 1){
		cout << isim1 << " Hosgeldiniz" << endl;
	}
	else if (giris_degeri == 2){
		cout << isim2 << " Hosgeldiniz"<< endl;
	}
	else if (giris_degeri == 3){
		cout << isim3 << " Hosgeldiniz"<< endl;
	}
	else if (giris_degeri == 4){
		cout << isim4 << " Hosgeldiniz"<< endl;
	}
	else{
		cout << "Hatali kullanici girisi yaptiniz lutfen tekrar deneyiniz..." << endl;
		goto donus1;
	}
	donus2:
	cout << "Lutfen parolanizi giriniz : ";
	cin >> parola_girisi;
	
	if (giris_degeri == 1 && parola_girisi == parola1){
		cout << "Sisteme giris yapiliyor...";
	}
	else if (giris_degeri == 2 && parola_girisi == parola2){
		cout << "Sisteme giris yapiliyor...";
	}
	else if (giris_degeri == 3 && parola_girisi == parola3){
		cout << "Sisteme giris yapiliyor...";
	}
	else if (giris_degeri == 4 && parola_girisi == parola4){
		cout << "Sisteme giris yapiliyor...";
	}
	else{
		cout << "Hatali parola girisi yaptiniz. Eger kullanici degistirmek istiyorsaniz 1'e tekrar parola girisi yapmak istiyorsaniz 2'ye basiniz : ";
		int deneme_degeri;
		cin >> deneme_degeri;
		
		if (deneme_degeri == 1){
			goto donus1;
		}
		else if (deneme_degeri == 2){
			goto donus2;
		}
	}
}
